{
  "name": "orphan",
  "version": "1.0.0",
  "description": "Orphan Radio",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client-install": "npm install --prefix client && npm run build --prefix client",
    "heroku-postbuild": "NODE_ENV=production cd client && npm install --only=dev && npm install && npm run build"
  },
  "engines": {
    "node": "10.4.1",
    "npm" : "6.4."
  },
  "author": "Mike Cassidy",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "concurrently": "^3.6.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.3",
    "express-form-data": "^2.0.8",
    "gravatar": "^1.8.0",
    "jsonwebtoken": "^8.5.0",
    "mongoose": "^5.4.19",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "react-transition-group": "^1.2.1",
    "three-orbitcontrols": "^2.102.1",
    "validator": "^9.4.1"
  },
  "devDependencies": {
    "nodemon": "^1.18.10"
  }
}
